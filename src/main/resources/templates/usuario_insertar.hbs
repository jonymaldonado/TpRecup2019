<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <script src="https://kit.fontawesome.com/27517fada0.js"></script>
    <link href="https://fonts.googleapis.com/css?family=Lexend+Deca&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="/js/generales.js"></script>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="icon" href="/img/logosolo.png">
    <link rel="stylesheet" href="/css/guardarropas.estilos.css">
    <title>Usuario</title>
  </head>
  <body>
    <header>
           <img src="/img/qmp-logo.png" alt="utn logo" class="utnLogo">
    </header>
    <div class="main_container">

      <div class="contenedor-carta-usuario">
        <div class="carta-usuario">
          <form class="" {{#if usuario}} action="/usuario/{{usuario.id}}" method="post" {{else}} action="/usuario" method="post" {{/if}} style="">

            <div class="form-cargar-usuario">
              <div class="" style="text-align:center;">
                <label for="input-img-usuario"><img src="/img/usuario.png" class="imagen-perfil" alt=""></label>
                <input id="input-img-usuario" type="file" name="" value="" style="display:none;">
              </div>

              <div class="" style="margin:40px;">
                <label><i class="fas fa-user"></i> Usuario</label>
                <br>
                <input type="text" name="nombreDeUsuario"  class="input-datos" placeholder="Usuario" {{#if usuario}}value="{{usuario.nombreDeUsuario}}" {{/if}}>
                <br>
                <br>
                <label><i class="fas fa-file-signature"></i>  Nombre</label>
                <br>
                <input type="text" name="nombre" {{#if usuario}} value="{{usuario.nombre}}" {{/if}} class="input-datos" placeholder="Nombre">
                <br> 
                <br>
                <label><i class="fas fa-file-signature"></i>  Apellido</label>
                <br>
                <br>
                <input type="text" name="apellido" {{#if usuario}} value="{{usuario.apellido}}" {{/if}} class="input-datos" placeholder="Apellido">
                <br>
                <br>      
              <!-- <div class="" style="margin:40px;"> -->
                <label><i class="fas fa-envelope"></i> E-mail</label>
                <br>
                <input type="email"  class="input-datos"name="correo" {{#if usuario}} value="{{usuario.correo}}" {{/if}} placeholder="Correo">
                <br>
                <br>
                <label><i class="fas fa-phone"></i> Celular</label>
                <br>
                <input type="number"  class="input-datos" name="celular" {{#if usuario}} value="{{usuario.celular}}" {{/if}} placeholder="celular">
                <br>
                <br>
                <label><i class="fas fa-unlock-alt"> </i> Contraseña</label>
                <br>
                <input type="password" name="password" {{#if usuario}} value="{{usuario.password}}" {{/if}} class="input-datos" placeholder="Contraseña">
                <br>
                <br>
                {{#if usuario}}<!-- creo que aca solo deberia crear el usuario -->
                <input type="submit" name="" class="btn-rojo" style="float:right;"  value="Guardar cambios">
                {{else}}
                <input type="submit" name="" class="btn-rojo" title="Crear usuario" style="float:right;"  value="Crear usuario">
                <!-- {{/if}}
                <a href="/" class="btn-rojo" style="float:left;"title="Volver a la pantalla principal">Volver</a> -->
              <!-- </div> -->
            </div>
          </form>
        </div>
      </div>

    </div>
  </body>
  </html>
